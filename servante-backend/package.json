{
  "name": "servante-backend",
  "version": "1.0.0",
  "description": "Backend API pour Servante Intelligente EMINES",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "load:docs": "tsx scripts/loadDocuments.ts",
    "test:chroma": "tsx scripts/testChromaSimple.ts",
    "test:chat": "tsx scripts/testChat.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "emines",
    "servante",
    "tools",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chroma-core/default-embed": "^0.1.9",
    "@langchain/core": "^1.1.26",
    "@langchain/textsplitters": "^1.0.1",
    "@prisma/client": "^5.22.0",
    "@serialport/parser-readline": "^13.0.0",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "chromadb": "^3.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^1.2.25",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.15",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.0",
    "@types/nodemailer": "^6.4.15",
    "@types/serialport": "^8.0.5",
    "@vitest/ui": "^4.0.18",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.4",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18"
  }
}
